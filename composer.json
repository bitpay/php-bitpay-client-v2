{
  "name": "bitpay/sdk",
  "description": "Light version of the PHP library for the new cryptographically secure BitPay API",
  "license": "MIT",
  "minimum-stability": "stable",
  "keywords": [
    "bitpay",
    "bitcoin"
  ],
  "homepage": "https://github.com/bitpay/php-bitpay-client-v2",
  "require": {
    "bitpay/key-utils": "^1.0",
    "php": "^7.3",
    "guzzlehttp/guzzle": "^6.3",
    "ext-json": "^1.7",
    "ext-reflection": "*"
  },
  "authors": [
    {
      "name": "Antonio Buedo",
      "email": "solutions-engineering@bitpay.com"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^8.3"
  },
  "autoload": {
    "psr-4": {
      "": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BitPay\\Test\\": "tests/"
    }
  }
}
